@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<style>
    .action-link {
        display: inline-block;
        text-align: center;
        font-size: 20px;
        padding: 10px 20px;
        background-color: #f2f2f2;
        color: #333;
        text-decoration: none;
        border: 1px solid #96ebb4;
        border-radius: 5px;
        transition: background-color 0.3s, color 0.3s;
        margin-top: 20px;
    }

        .action-link:hover {
            background-color: #999;
            color: #fff;
        }

    .big-image {
        width: 1400px; /* Adjust the width as needed */
        height: auto; /* Maintain aspect ratio */
        padding: 10px 20px;
        margin: 10px;
    }

    .image-container {
        display: flex;
        align-items: center;
        justify-content: center;
    }
</style>


<div>
    <h2>Welcome to the Farmer Market !!!</h2>
    <a class="action-link" asp-area="" asp-page="/Checkout">Checkout</a>
</div>


<div class="image-container">

    <img src="~/images/pxfuel.jpg" class="big-image" />

</div>
